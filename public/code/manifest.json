{
  "short_name": "Code",
  "name": "Code",
  "icons": [
    {
      "src": "/code/images/code-192.png",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "/code/images/code-512.png",
      "type": "image/png",
      "sizes": "512x512"
    }

  ],
  "start_url": "/code/index.html",
  "display": "standalone",
  "display_override": ["window-control-overlay", "standalone"],
  "scope": "/code/",
  "theme_color": "#0077bb",
  "background_color": "#ffffff",
  "description": "Super light code editing in your brower",
  "screenshots": [
    {
      "src": "images/screen-small-720x540.png",
      "type": "image/png",
      "sizes": "720x540"
    },
    {
      "src": "images/screen-mid-1024x662.png",
      "type": "image/png",
      "sizes": "1024x662"
    }
  ],
  "file_handlers": [
    {
      "action": "/code/openFile.html",
      "accept": {
        "application/javascript": [".js",".mjs",".jsm",".json"],
        "text/stylesheet": [".css"],
        "text/html": [".html"]
      },
      "icons": [
        {
          "src": "/code/images/code-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ]
}